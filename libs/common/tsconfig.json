{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "rootDirs": ["src"],
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
